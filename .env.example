# ─── Application ───────────────────────────────────────────────────────────
NODE_ENV=development           # development | production | test
PORT=3000
CLIENT_URL=http://localhost:5173

# ─── Database ──────────────────────────────────────────────────────────────
MONGO_URL=mongodb+srv://<user>:<password>@cluster.mongodb.net/?appName=Cluster0

# ─── JWT ───────────────────────────────────────────────────────────────────
ACCESS_TOKEN_SECRET=          # min 64 characters random string
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=         # min 64 characters random string (different from above)
REFRESH_TOKEN_EXPIRY=7d

# ─── Security ──────────────────────────────────────────────────────────────
BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=                # random string for cookie signing
